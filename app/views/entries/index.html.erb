<h1 class="mb-4 text-center">All Entries</h1>

<div class="d-flex justify-content-end mb-4">
  <%= link_to "View Dream Destinations", dream_destinations_path, class: "btn btn-success" %>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
  <% @entries.each do |entry| %>
    <div class="col">
      <div class="card h-100 shadow-sm">
        <% if entry.image.attached? %>
          <%= image_tag entry.image, class: "card-img-top card-image-fixed" %>
        <% end %>

        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title"><%= entry.name %></h5>

          <div class="mt-auto d-flex gap-2">
            <%= link_to "View / Edit", entry_path(entry), class: "btn btn-outline-secondary btn-sm" %>
            <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

