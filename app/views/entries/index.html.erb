<h1 class="mb-4">All Entries</h1>

<div class="row row-cols-1 g-3">
  <% @entries.each do |entry| %>
    <div class="col">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= entry.name %></h5>
          
          <%# If entry.link is a URL or a string %>
          <% if entry.link.present? %>
            <p class="card-text">
              <%= link_to entry.link, entry.link, target: "_blank", rel: "noopener", class: "btn btn-sm btn-outline-secondary" %>
            </p>
          <% end %>

          <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
