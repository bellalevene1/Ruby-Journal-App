<h1 class="mb-4">All Entries</h1>

<div class="row justify-content-center">
  <div class="col-md-10 col-lg-8">
    <% @entries.each do |entry| %>
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= entry.name %></h5>

          <div class="d-flex gap-2 mt-3">
            <%= link_to "View / Edit", entry_path(entry), class: "btn btn-outline-secondary btn-sm" %>
            <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
