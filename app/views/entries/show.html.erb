<h1 class="mb-4 text-center"><%= @entry.name %></h1>

<div class="card mx-auto shadow-sm" style="max-width: 700px;">
  <div class="card-body">
    <% if @entry.description.present? %>
      <p><strong>Description:</strong> <%= @entry.description %></p>
    <% end %>

    <% if @entry.link.present? %>
      <p><strong>Location:</strong> <%= @entry.link %></p>
    <% end %>

    <% if @entry.image.attached? %>
      <div class="mb-3">
        <strong>Photo:</strong><br>
        <%= image_tag @entry.image, class: "img-fluid rounded mt-2" %>
      </div>
    <% end %>

    <% if @entry.audio.attached? %>
      <div class="mb-3">
        <strong>Voice Memo:</strong><br>
        <audio controls class="w-100 mt-2">
          <source src="<%= url_for(@entry.audio) %>" type="<%= @entry.audio.content_type %>">
          Your browser does not support the audio element.
        </audio>
      </div>
    <% end %>

    <div class="d-flex gap-2 mt-4">
      <%= link_to "Edit", edit_entry_path(@entry), class: "btn btn-outline-primary" %>
      <%= link_to "Back", root_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
