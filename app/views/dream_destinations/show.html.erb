<h1 class="mb-4 text-center">Dream Destination</h1>

<div class="card mx-auto shadow-sm" style="max-width: 700px;">
  <div class="card-body">
    <h3 class="card-title text-primary"><%= @dream_destination.location %></h3>

    <% if @dream_destination.reason.present? %>
      <p><strong>Reason:</strong> <%= @dream_destination.reason %></p>
    <% end %>

    <% if @dream_destination.goal.present? %>
      <p><strong>Goal:</strong> <%= @dream_destination.goal %></p>
    <% end %>

    <div class="d-flex gap-2 mt-4">
      <%= link_to "Edit", edit_dream_destination_path(@dream_destination), class: "btn btn-outline-primary" %>
      <%= link_to "Back", dream_destinations_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>

